<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="styles.css">
    <title>URL Shrinker</title>
</head>
<body>
    <div class="container">
        <h1>URL SHRINKER</h1>
        <!--Form-->
        <form action="/" method="POST" class="my-4">
            <label for="fullURL" class="sr-only">URL</label>
            <input required type="url" name="fullURL" id="fullURL" class="form-control mr-10">
            <button type="submit" class="btn btn-success mr-10">Shrink</button>
        </form>

        <!--Table-->
        <table class="table table-striped table-responsive">
        <thead>
            <tr>
                <th>Full URL</th>
                <th>Short URL</th>
                <th>Clicks</th>
            </tr>
        </thead> 
        <tbody>
            <% urls.forEach(url => { %>
                <tr>
                    <td>
                        <a href="<%= url.fullURL %>"><%= url.fullURL %></a>
                    </td>
                    <td>
                        <a href="<%= url.smallURL %>"><%= url.smallURL %></a>
                    </td>
                    <td><%= url.count %></td>
                </tr>
            <% }); %>
        </tbody>
        </table>
    </div>
</body>
</html>